<Window x:Class="SmartAI.FactDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes do Fato" 
        Height="600" 
        Width="700"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#252526" Padding="20,0">
            <TextBlock Text="📋 Detalhes Completos" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#4EC9B0"
                       VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="#252526" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="DetailsTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="12"
                         Foreground="White"
                         Background="#2D2D30"
                         BorderThickness="0"
                         Padding="15"/>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" Background="#1E1E1E">
            <Button Content="Fechar"
                    Width="120"
                    Height="40"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Close_Click"
                    HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>