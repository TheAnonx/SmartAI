<Window x:Class="SmartAI.ConflictResolutionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resolução de Conflitos" 
        Height="700" 
        Width="1000"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        MinHeight="600"
        MinWidth="800">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F44336"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#388E3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button">
            <Setter Property="Background" Value="#F57C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF9800"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526">
            <Grid Margin="25,0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="⚠️ RESOLUÇÃO DE CONFLITOS" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#FF9800"/>
                    <TextBlock x:Name="SubtitleText" 
                               Text="Conflitos detectados no conhecimento" 
                               FontSize="13" 
                               Foreground="#CCCCCC"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Content="✕" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="40" 
                        Height="40"
                        Background="Transparent"
                        Foreground="#858585"
                        BorderThickness="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Click="Close_Click"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Conflicts List -->
        <Border Grid.Row="1" 
                Background="#252526" 
                Margin="20,15,20,10"
                CornerRadius="6"
                BorderBrush="#3F3F46"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          Padding="15">
                <ItemsControl x:Name="ConflictsList" ItemsSource="{Binding Conflicts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D30"
                                    CornerRadius="6"
                                    Padding="20"
                                    Margin="0,0,0,15"
                                    BorderBrush="#FF9800"
                                    BorderThickness="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="15"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="15"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Conflict Info -->
                                    <StackPanel Grid.Row="0">
                                        <TextBlock FontSize="16" 
                                                   FontWeight="Bold" 
                                                   Foreground="#FF9800">
                                            <Run Text="⚠️ CONFLITO: "/>
                                            <Run Text="{Binding Subject, Mode=OneWay}"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Relation, Mode=OneWay}"/>
                                            <Run Text=" ?"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Fact A -->
                                    <Border Grid.Row="2" 
                                            Background="#1E1E1E"
                                            CornerRadius="4"
                                            Padding="15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="VERSÃO A" 
                                                           FontSize="13" 
                                                           FontWeight="Bold"
                                                           Foreground="#4CAF50"
                                                           Margin="0,0,0,8"/>

                                                <TextBlock FontSize="15" 
                                                           Foreground="#E0E0E0"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,8">
                                                    <Run Text="{Binding Subject, Mode=OneWay}" Foreground="#4EC9B0"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding Relation, Mode=OneWay}" Foreground="#9CDCFE"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding FactAObject, Mode=OneWay}" Foreground="#CE9178" FontWeight="Bold"/>
                                                </TextBlock>

                                                <TextBlock FontSize="11" 
                                                           Foreground="#888888">
                                                    <Run Text="Fonte: "/>
                                                    <Run Text="{Binding FactASource, Mode=OneWay}"/>
                                                    <Run Text=" | Confiança: "/>
                                                    <Run Text="{Binding FactAConfidencePercent, Mode=OneWay}" FontWeight="Bold"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Content="✓ Manter A"
                                                    Style="{StaticResource SuccessButton}"
                                                    Width="110"
                                                    Tag="{Binding}"
                                                    Click="KeepFactA_Click"
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>

                                    <!-- Fact B -->
                                    <Border Grid.Row="4" 
                                            Background="#1E1E1E"
                                            CornerRadius="4"
                                            Padding="15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="VERSÃO B" 
                                                           FontSize="13" 
                                                           FontWeight="Bold"
                                                           Foreground="#2196F3"
                                                           Margin="0,0,0,8"/>

                                                <TextBlock FontSize="15" 
                                                           Foreground="#E0E0E0"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,8">
                                                    <Run Text="{Binding Subject, Mode=OneWay}" Foreground="#4EC9B0"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding Relation, Mode=OneWay}" Foreground="#9CDCFE"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding FactBObject, Mode=OneWay}" Foreground="#CE9178" FontWeight="Bold"/>
                                                </TextBlock>

                                                <TextBlock FontSize="11" 
                                                           Foreground="#888888">
                                                    <Run Text="Fonte: "/>
                                                    <Run Text="{Binding FactBSource, Mode=OneWay}"/>
                                                    <Run Text=" | Confiança: "/>
                                                    <Run Text="{Binding FactBConfidencePercent, Mode=OneWay}" FontWeight="Bold"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Content="✓ Manter B"
                                                    Style="{StaticResource SuccessButton}"
                                                    Width="110"
                                                    Tag="{Binding}"
                                                    Click="KeepFactB_Click"
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- Additional Options -->
                                <Border.ContextMenu>
                                    <ContextMenu Background="#2D2D30">
                                        <MenuItem Header="⚖️ Manter Ambos (contextos diferentes)" 
                                                  Click="KeepBoth_Click"
                                                  Tag="{Binding}"/>
                                        <MenuItem Header="🗑️ Deprecar Ambos" 
                                                  Click="DeprecateBoth_Click"
                                                  Tag="{Binding}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Info Panel -->
        <Border Grid.Row="2" 
                Background="#1E1E1E"
                Padding="25,10">
            <TextBlock x:Name="InfoText" 
                       FontSize="12" 
                       Foreground="#CCCCCC"
                       TextWrapping="Wrap">
                <Run Text="ℹ️ IMPORTANTE: " FontWeight="Bold" Foreground="#FF9800"/>
                <Run Text="Conflitos indicam contradições no conhecimento. Escolha a versão correta ou mantenha ambas se forem contextuais."/>
            </TextBlock>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#1E1E1E">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="✓ Fechar" 
                        Style="{StaticResource ModernButton}"
                        Width="150"
                        Height="45"
                        Click="Close_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>