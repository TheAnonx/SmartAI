<Window x:Class="SmartAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart AI - Sistema Avançado de Aprendizado" 
        Height="700" Width="1200"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Estilos modernos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Área principal do chat -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <Border Grid.Row="0" Background="#252526" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="🤖 Smart AI - Sistema de Aprendizado Contínuo" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#4EC9B0"/>
                    <TextBlock x:Name="StatusText" 
                               Text="Sistema pronto. Ensine-me ou faça perguntas!" 
                               FontSize="12" 
                               Foreground="#858585"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Área de conversa -->
            <Border Grid.Row="1" 
                    Background="#252526" 
                    CornerRadius="8" 
                    Padding="0"
                    Margin="0,0,0,10">
                <ScrollViewer x:Name="ChatScroll" 
                              VerticalScrollBarVisibility="Auto"
                              Background="Transparent">
                    <ItemsControl x:Name="ChatMessages" Padding="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5" 
                                        Padding="12" 
                                        CornerRadius="8"
                                        MaxWidth="600"
                                        HorizontalAlignment="{Binding Alignment}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                    <Setter Property="Background" Value="#007ACC"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsUser}" Value="False">
                                                    <Setter Property="Background" Value="#2D2D30"/>
                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Sender}" 
                                                   FontWeight="Bold" 
                                                   FontSize="11"
                                                   Foreground="#858585"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Message}" 
                                                   TextWrapping="Wrap" 
                                                   Foreground="White"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Timestamp}" 
                                                   FontSize="10"
                                                   Foreground="#555555"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Barra de ferramentas -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="🌐 Buscar Web" 
                        Style="{StaticResource ModernButton}"
                        Click="SearchWeb_Click"
                        Margin="0,0,5,0"/>
                <Button Content="📁 Importar Arquivo" 
                        Style="{StaticResource ModernButton}"
                        Click="ImportFile_Click"
                        Margin="0,0,5,0"/>
                <Button Content="💾 Exportar Conhecimento" 
                        Style="{StaticResource ModernButton}"
                        Click="ExportKnowledge_Click"
                        Margin="0,0,5,0"/>
                <Button Content="🗑️ Limpar Chat" 
                        Style="{StaticResource ModernButton}"
                        Click="ClearChat_Click"
                        Background="#D32F2F"/>
            </StackPanel>

            <!-- Área de entrada -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputBox" 
                         Grid.Column="0"
                         Style="{StaticResource ModernTextBox}"
                         AcceptsReturn="False"
                         KeyDown="InputBox_KeyDown"
                         Margin="0,0,10,0"
                         Height="50"
                         VerticalContentAlignment="Center"/>

                <Button x:Name="SendButton" 
                        Grid.Column="1"
                        Content="Enviar 📤" 
                        Style="{StaticResource ModernButton}"
                        Click="SendButton_Click"
                        Width="100"
                        Height="50"/>
            </Grid>
        </Grid>

        <!-- Painel lateral de estatísticas -->
        <Border Grid.Column="1" 
                Background="#252526" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,10,10,10">
            <StackPanel>
                <TextBlock Text="📊 Estatísticas do Sistema" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#4EC9B0"
                           Margin="0,0,0,15"/>

                <!-- Conceitos aprendidos -->
                <Border Background="#2D2D30" 
                        CornerRadius="6" 
                        Padding="12"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="🧠 Conceitos" 
                                   FontSize="12" 
                                   Foreground="#858585"/>
                        <TextBlock x:Name="ConceptCount" 
                                   Text="0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#4EC9B0"/>
                    </StackPanel>
                </Border>

                <!-- Instâncias -->
                <Border Background="#2D2D30" 
                        CornerRadius="6" 
                        Padding="12"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="📦 Instâncias" 
                                   FontSize="12" 
                                   Foreground="#858585"/>
                        <TextBlock x:Name="InstanceCount" 
                                   Text="0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#64B5F6"/>
                    </StackPanel>
                </Border>

                <!-- Relações -->
                <Border Background="#2D2D30" 
                        CornerRadius="6" 
                        Padding="12"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="🔗 Relações" 
                                   FontSize="12" 
                                   Foreground="#858585"/>
                        <TextBlock x:Name="RelationCount" 
                                   Text="0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#FFB74D"/>
                    </StackPanel>
                </Border>

                <!-- Conversas -->
                <Border Background="#2D2D30" 
                        CornerRadius="6" 
                        Padding="12"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="💬 Conversas" 
                                   FontSize="12" 
                                   Foreground="#858585"/>
                        <TextBlock x:Name="ConversationCount" 
                                   Text="0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#BA68C8"/>
                    </StackPanel>
                </Border>

                <!-- Últimos conceitos aprendidos -->
                <TextBlock Text="📚 Aprendizado Recente" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="#4EC9B0"
                           Margin="0,0,0,10"/>

                <ScrollViewer MaxHeight="200" 
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="RecentLearning">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" 
                                        CornerRadius="4" 
                                        Padding="8"
                                        Margin="0,0,0,5">
                                    <TextBlock Text="{Binding}" 
                                               TextWrapping="Wrap" 
                                               Foreground="White"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Sugestões -->
                <TextBlock Text="💡 Sugestões de Uso" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="#4EC9B0"
                           Margin="0,20,0,10"/>

                <Border Background="#2D2D30" 
                        CornerRadius="6" 
                        Padding="10">
                    <TextBlock TextWrapping="Wrap" 
                               FontSize="11" 
                               Foreground="#CCCCCC">
                        <Run Text="• Ensine: "/>
                        <Run Text="'Python é uma linguagem'" Foreground="#4EC9B0"/><LineBreak/>
                        <Run Text="• Pergunte: "/>
                        <Run Text="'O que é Python?'" Foreground="#64B5F6"/><LineBreak/>
                        <Run Text="• Relacione: "/>
                        <Run Text="'Cachorro tem patas'" Foreground="#FFB74D"/><LineBreak/>
                        <Run Text="• Busque: "/>
                        <Run Text="Use botão 🌐" Foreground="#BA68C8"/>
                    </TextBlock>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>