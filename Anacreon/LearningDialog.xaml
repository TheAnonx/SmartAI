<Window x:Class="SmartAI.LearningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aprender da Busca Web" 
        Height="500" 
        Width="700"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="FactCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526">
            <Grid>
                <StackPanel VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="💡 Fatos Encontrados na Busca Web" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#4EC9B0"/>
                    <TextBlock x:Name="SubtitleText" 
                               Text="Selecione quais fatos você quer que eu aprenda:" 
                               FontSize="12" 
                               Foreground="#858585"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Content="✕" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="40" 
                        Height="40"
                        Background="Transparent"
                        Foreground="#858585"
                        BorderThickness="0"
                        FontSize="18"
                        Click="Close_Click"/>
            </Grid>
        </Border>

        <!-- Facts List -->
        <Border Grid.Row="1" 
                Background="#252526" 
                Margin="20,10,20,10"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          Padding="10">
                <ItemsControl x:Name="FactsList" ItemsSource="{Binding Facts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                      Style="{StaticResource FactCheckBox}"
                                      Checked="FactCheckBox_Changed"
                                      Unchecked="FactCheckBox_Changed">
                                <TextBlock Text="{Binding Text}" 
                                           TextWrapping="Wrap"
                                           Foreground="White"
                                           MaxWidth="600"/>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Selection Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10">
            <Button Content="✓ Selecionar Todos" 
                    Style="{StaticResource SecondaryButton}"
                    Click="SelectAll_Click"
                    Margin="0,0,10,0"
                    Width="150"/>
            <Button Content="✗ Limpar Seleção" 
                    Style="{StaticResource SecondaryButton}"
                    Click="ClearAll_Click"
                    Width="150"/>
        </StackPanel>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#1E1E1E">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="LearnButton"
                        Content="🧠 Aprender Selecionados" 
                        Style="{StaticResource ModernButton}"
                        Click="Learn_Click"
                        Width="200"
                        Height="40"
                        Margin="0,0,10,0"/>
                <Button Content="Cancelar" 
                        Style="{StaticResource SecondaryButton}"
                        Click="Cancel_Click"
                        Width="100"
                        Height="40"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>