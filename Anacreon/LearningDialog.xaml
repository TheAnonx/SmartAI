<Window x:Class="SmartAI.LearningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aprender da Busca Web" 
        Height="550" 
        Width="750"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        MinHeight="400"
        MinWidth="600">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FactCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526">
            <Grid>
                <StackPanel VerticalAlignment="Center" Margin="25,0">
                    <TextBlock Text="💡 Fatos Encontrados na Busca Web" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#4EC9B0"/>
                    <TextBlock x:Name="SubtitleText" 
                               Text="Selecione quais fatos você quer que eu aprenda:" 
                               FontSize="13" 
                               Foreground="#CCCCCC"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Content="✕" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="40" 
                        Height="40"
                        Background="Transparent"
                        Foreground="#858585"
                        BorderThickness="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Click="Close_Click"
                        Cursor="Hand"
                        Margin="0,0,10,0"/>
            </Grid>
        </Border>

        <!-- Facts List -->
        <Border Grid.Row="1" 
                Background="#252526" 
                Margin="20,15,20,15"
                CornerRadius="6"
                BorderBrush="#3F3F46"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          Padding="15">
                <ItemsControl x:Name="FactsList" ItemsSource="{Binding Facts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D30"
                                    CornerRadius="4"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                          Style="{StaticResource FactCheckBox}"
                                          Checked="FactCheckBox_Changed"
                                          Unchecked="FactCheckBox_Changed">
                                    <TextBlock Text="{Binding Text}" 
                                               TextWrapping="Wrap"
                                               Foreground="White"
                                               LineHeight="20"
                                               MaxWidth="650"/>
                                </CheckBox>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Selection Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
            <Button Content="✓ Selecionar Todos" 
                    Style="{StaticResource SecondaryButton}"
                    Click="SelectAll_Click"
                    Margin="0,0,10,0"
                    Width="160"
                    Height="38"/>
            <Button Content="✗ Limpar Seleção" 
                    Style="{StaticResource SecondaryButton}"
                    Click="ClearAll_Click"
                    Width="160"
                    Height="38"/>
        </StackPanel>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#1E1E1E">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="LearnButton"
                        Content="🧠 Aprender Selecionados" 
                        Style="{StaticResource ModernButton}"
                        Click="Learn_Click"
                        Width="220"
                        Height="45"
                        Margin="0,0,15,0"/>
                <Button Content="Cancelar" 
                        Style="{StaticResource SecondaryButton}"
                        Click="Cancel_Click"
                        Width="120"
                        Height="45"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>